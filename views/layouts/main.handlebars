<script>
     $("#saved-articles").hide();

    // $.getJSON("/articles", function(data){
    //     // render articles using handlbars
    // })

    $("#saved-art-btn").on("click", function (event) {
        event.preventDefault();
        $("#saved-articles").show();
        $("#all-articles").hide();
        

    });

    $("#scrape-art-btn").on("click", function(event){
        event.preventDefault();
        $("#saved-articles").hide();
        $("#all-articles").show();

    })

    $(".saveArticle").on("click", function(event){
        event.preventDefault();
        
        var id = $(this).data("id");
        console.log(id);

        $.ajax("/save/" + id, {
            type: "PUT",
            data: id
        }).then(function(){
            console.log("Saved article.");
            location.reload();
        })
    });
</script>

